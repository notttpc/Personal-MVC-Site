@{
    ViewData["Title"] = "Email Confirmation";
}

@section nav {
    <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Resume", "Home")">Resume</a></li>
            <li><a href="@Url.Action("Portfolio", "Home")">Portfolio</a></li>
            <li><a href="@Url.Action("Link", "Home")">Centriq</a></li>
            <li><a class="active" href="@Url.Action("Contact", "Home")">Contact</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->
}


<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="email">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2 class="m-5">Message Sent!</h2>
                    <div class="info rounded">
                        <h3 class="p-5">
                            Thank you for contacting us! A member of our team will respond to your message
                            using the provided email address -- @Model.Email -- in the next 1-3 business days.
                        </h3>
                        <h5>
                            You sent the following message on
                            @DateTime.Now.Date.ToShortDateString() at
                            @DateTime.Now.ToShortTimeString() :
                        </h5>
                        <h6 class="p-5">
                            @Model.Message
                        </h6>
                    </div>
                <br />
                <div>
                    <iframe class="rounded" style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.274884998462!2d-94.60958528389634!3d38.96339085065514!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0e925e366ed0f%3A0x73aec4617abd2f03!2sCentriq%20Training!5e0!3m2!1sen!2sus!4v1630519113795!5m2!1sen!2sus" width="600" height="450" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

        </div>
    </section><!-- End Contact Section -->
</main><!-- End #main -->
